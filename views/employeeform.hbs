    <script src="../../dist/js/adminlte.js"></script>
    <!-- Initialize DataTables -->

    
</body>
<script>
        document.addEventListener('DOMContentLoaded', () => {
    fetch('/genders')
        .then(response => response.json())
        .then(genders => {
            console.log('Fetched genders:', genders); // Log the fetched data
            
            const genderSelect = document.getElementById('employee_gender');
            genderSelect.innerHTML = '<option value="">Select Gender</option>'; // Add a default option

            // Ensure the fetched data is an array and contains valid strings
            if (Array.isArray(genders)) {
                genders.forEach(gender => {
                    if (gender) { // Ensure the gender value is not null or empty
                        const option = document.createElement('option');
                        option.value = gender; // Set the value attribute to the gender
                        option.textContent = gender; // Display the gender as the text
                        genderSelect.appendChild(option);
                    }
                });
            } else {
                console.error('Expected an array of gender options, but received:', genders);
            }
        })
        .catch(error => console.error('Error fetching gender options:', error));
});



    </script>
</html>
