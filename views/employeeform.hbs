                            <input type="text" name="phone" class="form-control" id="phone" placeholder="Phone">
                        </div>
                        <button type="submit" class="btn btn-primary float-right">Submit</button>
                            </div>
                        </div>
                    </div>
                </form>
                        </div>
                    </div>
                    <!--/.col (left) -->
                </div>
                <!--/.row -->
            </div>
        </section>
            </div>
