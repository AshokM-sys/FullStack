        <script>
            function populateEditForm(id, empCode, empName, Basic, DA, HRA, Conveyance, Salary, EPF, ESI, Advance, Incentive) {
    document.getElementById('editId').value = id;
    document.getElementById('editEmpCode').value = empCode;
    document.getElementById('editEmpName').value = empName;
    document.getElementById('editBasic').value = Basic;
    document.getElementById('editDA').value = DA;
    document.getElementById('editHRA').value = HRA;
    document.getElementById('editConveyance').value = Conveyance;
    document.getElementById('editSalary').value = Salary;
    document.getElementById('editEPF').value = EPF;
    document.getElementById('editESI').value = ESI;
    document.getElementById('editAdvance').value = Advance;
    document.getElementById('editIncentive').value = Incentive;
}

document.getElementById('editForm').addEventListener('submit', function(event) {
    event.preventDefault(); // Prevent default form submission

    const id = document.getElementById('editId').value;
    const empCode = document.getElementById('editEmpCode').value;
    const empName = document.getElementById('editEmpName').value;
    const Basic = document.getElementById('editBasic').value;
    const DA = document.getElementById('editDA').value;
    const HRA = document.getElementById('editHRA').value;
    const Conveyance = document.getElementById('editConveyance').value;
    const Salary = document.getElementById('editSalary').value;
    const EPF = document.getElementById('editEPF').value;
    const ESI = document.getElementById('editESI').value;
    const Advance = document.getElementById('editAdvance').value;
    const Incentive = document.getElementById('editIncentive').value;

    fetch(`/salarybasics/update/${id}`, {
        method: 'POST',
        headers: {
            'Content-Type': 'application/json',
        },
        body: JSON.stringify({
            empCode,
            empName,
            Basic,
            DA,
            HRA,
            Conveyance,
            Salary,
            EPF,
            ESI,
            Advance,
            Incentive
        }),
    })
    .then(response => {
        if (response.ok) {
            return response.json();
        }
        throw new Error('Network response was not ok.');
    })
    .then(data => {
        alert(data.message);
        $('#editModal').modal('hide'); // Hide modal
        location.reload(); // Refresh page or update table
    })
    .catch(error => {
        console.error('There was a problem with the fetch operation:', error);
    });
});
        </script>

<script>
    document.getElementById('branch').addEventListener('blur', function() {
        const branchName = this.value.trim(); // Trim whitespace

        // Make sure to include the branch name in the fetch URL
        fetch(`/getbranch?name=${encodeURIComponent(branchName)}`)
            .then(response => {
                if (!response.ok) throw new Error('Branch not found');
                return response.json();
            })
            .then(data => {
                document.getElementById('bankName').value = data.bank_name;
                document.getElementById('ifscCode').value = data.ifsc_code;
            })
            .catch(error => {
                console.error('Error fetching branch details:', error);
                alert('Branch not found. Please try again.');
            });
    });
</script>


