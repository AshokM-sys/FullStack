<script>
    $(document).ready(function() {
        $('#empCode').on('change', function() {
            const empCode = $(this).val();
            if (empCode) {
                $.ajax({
                    url: `/api/employees/${empCode}`,
                    type: 'GET',
                    success: function(data) {
                        $('#empName').val(data.empName);
                    },
                    error: function(err) {
                        $('#empName').val(''); // Clear the empName field if there's an error
                        alert(err.responseJSON.message || 'Error fetching employee data');
                    }
                });
            } else {
                $('#empName').val(''); // Clear if empCode is empty
            }
        });
    });
</script>

